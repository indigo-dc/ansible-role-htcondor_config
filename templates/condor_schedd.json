{
  "id": "condorschedd",
  "cpus": {{docker_cpu_x_schedd}},
  "mem": {{docker_ram_x_schedd}},
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{htcondor_config_condor_image}}",
      "forcePullImage": true,
      "privileged": true,
      "network": "HOST"
    },
    "volumes": [
      {
        "containerPath": "/home/uwdir",
        "hostPath": "/tmp/uwdir",
        "mode": "RW"
      },
      {
        "containerPath": "/var/lib/condor/spool/",
        "hostPath": "/spooldisk/",
        "mode": "RW"
      }
    ]
  },
  "healthChecks": [
    {
      "command": {
        "value": "dodas_check_condor_processes condor_schedd"
        },                                                         
      "gracePeriodSeconds": 300,                                   
      "intervalSeconds": 60,                                       
      "maxConsecutiveFailures": 3,                                 
      "protocol": "COMMAND",                                       
      "ipProtocol": "IPv4",                                        
      "timeoutSeconds": 20,                                        
      "delaySeconds": 15                                           
    }        
  ],
  "env": {
    "CONDOR_HOST": "{{ condor_host }}",
    "CONDOR_SCHEDD_SSH_PORT": "{{htcondor_schedd_ssh_port}}",
    "NETWORK_INTERFACE": "{{htcondor_config_schedd_ip_pub}}",
    "ZOOKEEPER_HOST_LIST": "{{ zookeeper_peers }}",
    "HIGHPORT": "{{ high_port }}",
    "LOWPORT": "{{ low_port }}",
    "PROXY_CACHE": "{{ proxycache_host }}:{{config_proxycache_serviceport}}"
  },
  "args": [
    "schedd"
  ],
  "constraints": [
    ["hostname", "UNIQUE"],
    ["schedd", "LIKE", "True"]
  ]
}
